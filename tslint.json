{
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "**/*.js"
        ]
    },
    "rules": {
        "interface-name": false,
        "prefer-const": true,
        "no-var-requires": false,
        "object-literal-sort-keys": false,
        "no-bitwise": false,
        "forin": false,
        "no-shadowed-variable": false,
        "max-line-length": false,
        "max-classes-per-file": false,
        "no-console": false,
        "no-reference": false,
        "eofline": true,
        "quotemark": [
            true,
            "double"
        ],
        "typedef": [
            true,
            "call-signature",
            "property-declaration"
        ]
    }
}